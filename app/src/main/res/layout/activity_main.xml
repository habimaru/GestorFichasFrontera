            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout28">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Magia"
                android:id="@+id/textHechizos"
                android:layout_weight="0.4"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/campoHechizos"
                android:layout_weight="1"
                android:lines="6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Skills"
                android:id="@+id/textHabilidades"
                android:layout_weight="0.4"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/campoHabilidades"
                android:layout_weight="1"
                android:lines="6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout27">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Objetos"
                android:id="@+id/textInventario"
                android:layout_weight="0.4"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/campoInventario"
                android:layout_weight="1"
                android:lines="6" />
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Frontera de Madrugada"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</ScrollView>